
#Create input to get number from user
num = int(input("Please insert a number"))
#Check if number is divisible by 2 and 5
if num%2==0 and num%5==0:
          print("The number is divisible by 2 and 5")
#Check if number is divisible by 2 or 5
elif num%2==0  or num%5==0:
          print("The number is divisible by 2 or 5")
#Print out statement if not
else:
    print("The number is not divisible by 2 or 5")
