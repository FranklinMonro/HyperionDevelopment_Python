
#get user input
num = int(input("Please insert a number: "))

if num > 1:#Check if number is bigger than 1
    for i in range(2,num):#create range
        if(num%i)==0:#check if number is a prime number
            print(str(num) + " is not a prime number")
            break
        else:
            print(str(num) + " is a prime number")
            break
else:
    print("This number is one or smaller")
